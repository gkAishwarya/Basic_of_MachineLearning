#In pwd.py file

from flask import Flask,render_template,request
app=Flask(__name__)

@app.route('/submit',methods=['GET','POST'])
def index1():
    Name=request.form.get('name')
    pwd=request.form.get('pwd')
    if pwd=='admin':
        return "Hello "+Name
    else:
        return "Login FAILED"

@app.route('/')
def index():
    a='Everyone'
    return render_template('index.html',a=a)

if __name__=="__main__":
    app.run()

#In index.html

